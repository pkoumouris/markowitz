<h1 id="securityTitle" class="myHeader">
	<span><%= @security.ticker %> </span>
	<%= @security.title %>
</h1>
<div class="row">
	<div class="col-sm-8">
		<canvas id="securityHistory" ></canvas>
		
	</div>
	<div class="col-sm-4" id="securityTopRight">
		<%= react_component('SecurityView', {id: @security.id}) %>
	</div>
</div>

<div class="row" id="securityMidBox">
	<div class="col-sm-3">
		<div>
			<h4>You own</h4>
			<h3><%= user_own_security(@security) %></h3>
			<h4>of this security.</h4>
		</div>
	</div>
	<div class="col-sm-3">
		<div>
			<h4>Change</h4>
			<% _change_last_close = change_last_close(@security) %>
			<h3 
				<% if _change_last_close > 0.0 %>
				class="changeUp"
				<% else %>
				class="changeDown"
				<% end %>
			>
				
				<% if _change_last_close > 0 %>
				<span id="midInfoArrowResize" class="glyphicon glyphicon-arrow-up"></span>
				<%= number_to_currency(_change_last_close) %>
				<%= ((100.0 * _change_last_close / @security.price).round(2)).to_s + '%' %>
				<% else %>
				<span id="midInfoArrowResize" class="glyphicon glyphicon-arrow-down"></span>
				<%= number_to_currency(-1.0*_change_last_close) %>
				<%= ((-100.0 * _change_last_close / @security.price).round(2)).to_s + '%' %>
				<% end %>
			</h3>
			<h4>from last close</h4>
		</div>
	</div>
	<div class="col-sm-3">
		<div>
			<h4>Change</h4>
			<% _change_last_week = change_last_week(@security) %>
			<h3 
				<% if _change_last_week > 0.0 %>
				class="changeUp"
				<% else %>
				class="changeDown"
				<% end %>
			>
				
				<% if _change_last_week > 0 %>
				<span id="midInfoArrowResize" class="glyphicon glyphicon-arrow-up"></span>
				<%= number_to_currency(_change_last_week) %>
				<%= ((100.0 * _change_last_week / @security.price).round(2)).to_s + '%' %>
				<% else %>
				<span id="midInfoArrowResize" class="glyphicon glyphicon-arrow-down"></span>
				<%= number_to_currency(-1.0*_change_last_week) %>
				<%= ((-100.0 * _change_last_week / @security.price).round(2)).to_s + '%' %>
				<% end %>
			</h3>
			<h4>from last week</h4>
		</div>
	</div>
	<div class="col-sm-3">
		<div>
			<h4>Expected return</h4>
			<h3>
				<%= (100.0*@security.expreturn).to_s + '%' %>
			</h3>
			<h4>annual return.</h4>
		</div>
	</div>
</div>

<div class="row" id="securityInfoBox">
	<div class="col-sm-6">
		<div>
			<h3>
				About <%= @security.title %>
			</h3>
			<p>
				<%= @security.description %>
			</p>
		</div>
	</div>
	<div class="col-sm-6">
	</div>
</div>

