

<div class="formSquare">

	<h1 class="myHeader">Login</h1>

	<%= form_for(:session, url: login_path) do |f| %>

		<%= f.label :email %>
		<%= f.email_field :email, class: 'form-control' %><br>

		<%= f.label :password %>
		
		<%= f.password_field :password, class: 'form-control' %><br>

		<%= link_to "Forgot password?", new_password_reset_path %><br /><br />

		<%= f.submit "Log in", class: "myButton" %><br>
	<% end %>

	<br />

	<h3 class="myHeader">
		Don't have an account?
	</h3>
	<%= link_to "Sign up here", signup_path %>
</div>
